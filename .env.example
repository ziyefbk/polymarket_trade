# Polymarket Arbitrage System Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# POLYMARKET CONFIGURATION
# =============================================================================
# Your Polygon wallet private key (for trading)
# WARNING: Never commit this file with real keys!
POLYMARKET_PRIVATE_KEY=

# =============================================================================
# NEWS & SENTIMENT DATA SOURCES
# =============================================================================
# NewsAPI.org API Key (free tier available)
# Get yours at: https://newsapi.org/register
NEWSAPI_KEY=

# Twitter/X API Bearer Token (v2 - Recommended)
# Get yours at: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=

# Twitter API v1.1 (Fallback - Limited Features)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
TRADING_MIN_PROFIT_THRESHOLD=0.02
TRADING_MAX_POSITION_SIZE=1000.0
TRADING_MAX_DAILY_LOSS=100.0
TRADING_SLIPPAGE_TOLERANCE=0.01

# =============================================================================
# ARBITRAGE DETECTION
# =============================================================================
ARBITRAGE_MIN_DISCREPANCY=0.03
ARBITRAGE_SCAN_INTERVAL=30

# =============================================================================
# TWITTER MONITORING
# =============================================================================
TWITTER_MONITOR_ENABLED=true
TWITTER_SCAN_INTERVAL=300  # seconds (5 minutes)
TWITTER_MAX_RESULTS=100    # tweets per query

# Influential Accounts to Monitor (comma-separated)
TWITTER_INFLUENTIAL_POLITICS=realDonaldTrump,JoeBiden,elonmusk,nytimes,cnn,foxnews
TWITTER_INFLUENTIAL_CRYPTO=VitalikButerin,CZ_Binance,SBF_FTX,coinbase,CoinDesk
TWITTER_INFLUENTIAL_TECH=elonmusk,sama,pmarca,balajis,naval

# =============================================================================
# TELEGRAM MONITORING
# =============================================================================
# Telegram API Credentials
# Get from: https://my.telegram.org/apps
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Session Configuration
TELEGRAM_SESSION_NAME=polymarket_monitor

# Monitoring Settings
TELEGRAM_MONITOR_ENABLED=true
TELEGRAM_SCAN_INTERVAL=300  # seconds (5 minutes)
TELEGRAM_MAX_MESSAGES=100   # messages per channel

# Channels to Monitor (comma-separated usernames without @)
TELEGRAM_CHANNELS_CRYPTO=cryptonews,bitcoin,ethereum,coindesk,binance
TELEGRAM_CHANNELS_POLITICS=breaking247,politicalnews,worldpoliticsnews
TELEGRAM_CHANNELS_TECH=technews,ainews,techcrunch

# =============================================================================
# REDDIT MONITORING
# =============================================================================
# Reddit API Credentials
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=PolymarketIntelligence/1.0

# Monitoring Settings
REDDIT_MONITOR_ENABLED=true
REDDIT_SCAN_INTERVAL=600   # seconds (10 minutes)
REDDIT_MAX_POSTS=100        # posts per subreddit

# Subreddits to Monitor (comma-separated without r/)
REDDIT_SUBREDDITS_POLITICS=politics,worldnews,news
REDDIT_SUBREDDITS_CRYPTO=cryptocurrency,bitcoin,ethtrader
REDDIT_SUBREDDITS_TECH=technology,tech,programming
REDDIT_SUBREDDITS_ECONOMY=economics,stocks,investing
